<!--=== Footer v2 ===-->
<div id="footer-v2" class="footer-v2">
    <div class="footer">
        <div class="container">
            <div class="row">
                <!-- About -->
                <div class="col-md-3 md-margin-bottom-40">
                    <%= link_to root_path do %>
                        <%= image_tag("logo.png", id: "logo-footer", class: "footer-logo", alt: "Logo") %>
                    <% end %>
                    <p class="margin-bottom-20"><%= t(".description-text") %></p>

                </div>
                <!-- End About -->

                <!-- Link List -->
                <div class="col-md-3 md-margin-bottom-40">
                  <div class="headline"><h2 class="heading-sm"><%= t(".useful-links.title") %></h2></div>
                    <ul class="list-unstyled link-list">
                        <li><%= link_to t(".useful-links.about-us"), about_us_path %><i class="fa fa-angle-right"></i></li>
                        <li><%= link_to t(".useful-links.leaderboards"), contests_path %><i class="fa fa-angle-right"></i></li>
                        <li><%= link_to t(".useful-links.teams"), teams_path %><i class="fa fa-angle-right"></i></li>
                        <li><%= link_to t(".useful-links.following"), following_path %><i class="fa fa-angle-right"></i></li>
                        <li><%= link_to t(".useful-links.profile"), edit_user_registration_path %><i class="fa fa-angle-right"></i></li>
                    </ul>
                </div>
                <!-- End Link List -->

                <!-- Latest Tweets -->
                <div class="col-md-3 md-margin-bottom-40">
                    <div class="latest-tweets">
                      <div class="headline"><h2 class="heading-sm"><%= t(".latest-tweets") %></h2></div>
                      <% $client.user_timeline(Settings.twitter).take(3).each do |tweet| %>
                        <div class="latest-tweets-inner">
                            <i class="fa fa-twitter"></i>
                            <p>
                              <%= link_to tweet.user.name, "#{tweet.user.url}" %>
                              <%= tweet.text %>
                              <%#OPTIMIZE fix short url instead of this%>
                              <%= link_to tweet.url, "#{tweet.url}" %>
                              <small class="twitter-time"><%= time_ago_in_words(tweet.created_at) %></small>
                            </p>
                        </div>
                      <% end %>
                    </div>
                </div>
                <!-- End Latest Tweets -->

                <!-- Address -->
                <div class="col-md-3 md-margin-bottom-40">
                  <div class="headline"><h2 class="heading-sm"><%= t(".contact-us.title") %></h2></div>
                    <address class="md-margin-bottom-40">
                        <%= t(".contact-us.paragraph") %><br />
                        <i class="fa fa-envelope"></i><%= t(".contact-us.mail") %>: <a href="mailto:<%= ENV["SUPPORT_EMAIL"] %>"><%= ENV["SUPPORT_EMAIL"] %></a>
                    </address>
                </div>
                <!-- End Address -->
            </div>
        </div>
    </div><!--/footer-->

        <div class="copyright">
            <div class="container">
                <p class="text-center"><%= raw t(".copyright") %></p>
            </div>
        </div><!--/copyright-->
</div>
<!--=== End Footer v2 ===-->
