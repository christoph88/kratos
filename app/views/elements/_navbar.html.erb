<!-- **********************************************************************************************************************************************************
TOP BAR CONTENT & NOTIFICATIONS
*********************************************************************************************************************************************************** -->
<!--header start-->
<header class="header black-bg">
        <div class="sidebar-toggle-box">
            <div class="fa fa-bars tooltips" data-placement="right" data-original-title="Toggle Navigation"></div>
        </div>
      <!--logo start-->
      <%= link_to defined?(root_path) ? root_path : "#", class: "logo" do %>
        <b><%= t('general.brand_name') %></b>
      <% end %>
      <!--logo end-->
      <div class="nav notify-row" id="top_menu">
        <%#This row contains the notifications.%>
      </div>
      <div class="top-menu">
        <ul class="nav pull-right top-menu">
          <% if defined?(Devise) %>
            <% if user_signed_in? %>
            <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: 'logout' %></li>
            <% else %>
            <li><%= link_to "Login", new_user_session_path, class: 'logout' %></li>
            <% end %>
          <% end %>
        </ul>
      </div>
  </header>
<!--header end-->

