<% @title = t('.resend_unlock_instructions', :default => "Resend unlock instructions") %>

<div class="row mt">
  <div class="col-lg-12">
    <div class="form-panel">
    <%= form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post, class: "form-horizontal style-form" }) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :email, class: "col-sm-2 col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.email_field :email, class: "form-control" %>
        </div>
      </div>

      <div><%= f.submit t('.resend_unlock_instructions', :default => "Resend unlock instructions") %></div>
    <% end %>

    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
