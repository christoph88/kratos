<% content_for :dynamic_stylesheets do %>
  <%= stylesheet_link_tag "pages/page_log_reg_v1.css", 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag "unify/brand-buttons-inversed.css", 'data-turbolinks-track' => true %>
<%end%>
<% @title = t('.sign_up', :default => "Sign up") %>

<!--=== Content Part ===-->
<div class="container content">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { class: "reg-page" }) do |f| %>
                <div class="reg-header">
                    <h2><%= @title %></h2>
                    <p><%= raw t(".paragraph", href: link_to(t(".paragraph_link"), new_user_session_path)) %></p>
                </div>

                  <%= devise_error_messages! %>

                  <label><%= t(".username") %><%= raw redstar(@user, :username) %></label>
                  <%= f.text_field :username, class: "form-control margin-bottom-20" %>

                  <label><%= t(".email") %><%= raw redstar(@user, :username) %></label>
                  <%= f.email_field :email, class: "form-control margin-bottom-20" %>

                <div class="row">
                    <div class="col-sm-6">
                        <label><%= t(".password") %><%= raw redstar(@user, :username) %></label>
                        <%= f.password_field :password, class: "form-control margin-bottom-20" %>
                    </div>
                    <div class="col-sm-6">
                        <label><%= t(".confirm_password") %><%= raw redstar(@user, :username) %></label>
                        <%= f.password_field :password_confirmation, class: "form-control margin-bottom-20" %>
                    </div>
                </div>



                <hr>

                <div class="row">
                    <div class="col-lg-6 text-left">
                    <%- if devise_mapping.omniauthable? %>
                      <%- resource_class.omniauth_providers.each do |provider| %>
                        <%= link_to omniauth_authorize_path(resource_name, provider) do %>
                    <button class="btn btn-facebook-inversed">
                  <i class="fa fa-facebook"></i> <%= t('.sign_in_with_provider', :provider => provider.to_s.titleize, :default => "Sign in with #{provider.to_s.titleize}") %>
                    </button>
                        <% end -%>
                      <% end -%>
                    <% end -%>
                    </div>
                    <div class="col-lg-6 text-right">
                        <%= f.submit t('.sign_up', default: "Sign up"), class: "btn-u" %>
                    </div>
                </div>

            <% end %>
        </div>
    </div>
</div><!--/container-->
<!--=== End Content Part ===-->

