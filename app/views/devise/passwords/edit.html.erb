<% @title = t('.change_your_password', :default => 'Change your password') %>

<div class="row mt">
  <div class="col-lg-12">
    <div class="form-panel">
      <h4 class="mb"><i class="fa fa-angle-right"></i> <%= @title %></h4>
      <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, class: "form-horizontal style-form" }) do |f| %>
        <%= devise_error_messages! %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-group">
          <%= f.label :password, t('.new_password', :default => 'New password'), class: "col-sm-2 col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.password_field :password, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
        <%= f.label :password_confirmation, t('.confirm_new_password', :default => 'Confirm new password'), class: "col-sm-2 col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.password_field :password_confirmation, class: "form-control" %>
          </div>
        </div>

        <div><%= f.submit t('.change_my_password', :default => 'Change my password') %></div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
