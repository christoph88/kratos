<% content_for :dynamic_stylesheets do %>
  <%= stylesheet_link_tag "pages/page_log_reg_v1.css", 'data-turbolinks-track' => true %>
<%end%>
<% @title = t('.forgot_your_password', :default => 'Forgot your password?') %>

<!--=== Content Part ===-->
<div class="container content">
  <div class="row">
        <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
            <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, class: "reg-page" }) do |f| %>
                <div class="reg-header">
                <h2><%= @title %></h2>
                </div>
                <%= devise_error_messages! %>

                <div class="input-group margin-bottom-20">
                    <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                    <%= f.email_field :email, class: "form-control", placeholder: t('.emailplaceholder') %>
                </div>

                <div class="row">
                    <div class="col-md-12">
                      <%= f.submit t('.send_me_reset_password_instructions', :default => "Send me reset password instructions"), class: "btn btn-u pull-right" %>
                    </div>
                </div>

            <% end %>
        </div>
    </div><!--/row-->
</div><!--/container-->
<!--=== End Content Part ===-->
