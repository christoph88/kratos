<% @title = t('.forgot_your_password', :default => 'Forgot your password?') %>

<div class="row mt">
  <div class="col-lg-12">
    <div class="form-panel">
      <h4 class="mb"><i class="fa fa-angle-right"></i> <%= @title %></h4>
      <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, class: "form-horizontal style-form" }) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.label :email, class: "col-sm-2 col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.email_field :email, class: "form-control" %>
          </div>

        <div><%= f.submit t('.send_me_reset_password_instructions', :default => "Send me reset password instructions") %></div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
