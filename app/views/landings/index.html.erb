<% content_for :dynamic_stylesheets do %>
  <%= stylesheet_link_tag "owl.carousel/owl.carousel.css", 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag "pages/page_one.css", 'data-turbolinks-track' => true %>
<%end%>

<% content_for :dynamic_javascripts do %>
  <%= javascript_include_tag "jquery-parallax/jquery.parallax.js", 'data-turbolinks-track' => true %>
  <%= javascript_include_tag "counter/waypoints.js", 'data-turbolinks-track' => true %>
  <%= javascript_include_tag "counter-up/jquery.counterup.min.js", 'data-turbolinks-track' => true %>
  <%= javascript_include_tag "owl.carousel/owl.carousel.js", 'data-turbolinks-track' => true %>
  <%= javascript_include_tag "owl.carousel/owl-carousel.js", 'data-turbolinks-track' => true %>
  <script type="text/javascript">
      $(document).ready(function (){
          $("#what").click(function (){
                  $('html, body').animate({
                      scrollTop: $("#service").offset().top
                  }, 600);
          });
      });
    </script>
  </script>
<%end%>

<!-- Parallax Section -->
<div class="bg-image-v1 parallaxBg">
    <div class="container">
        <div class="headline-center headline-light">
          <h2><%= t(".parallax.title") %></h2>
            <p><%= t(".parallax.paragraph") %></p><br>
            <%= link_to t(".parallax.button"), "#", id: "what", class: "btn btn-u btn-brd btn-brd-hover btn-u-light" %>
        </div><!--/end Headline Center-->
    </div>
</div>
<!-- End Parallax Section -->

<!--=== Service Blcoks ===-->
<div id="service" class="container content-md">
    <div class="text-center margin-bottom-50">
        <h2 class="title-v2 title-center"><%= t(".service.title") %></h2>
        <p class="space-lg-hor"><%= t(".service.paragraph") %></p>
    </div>

    <!-- Service Blcoks -->
    <div class="row service-box-v1">
        <div class="col-md-4 col-sm-6 md-margin-bottom-40">
            <div class="service-block service-block-default no-margin-bottom">
                <i class="icon-lg rounded-x icon icon-badge"></i>
                <h2 class="heading-sm"><%= t(".service.block1.title") %></h2>
                <p><%= t(".service.block1.paragraph") %></p>
                <ul class="list-unstyled">
                  <% t(".service.block1.list").each do |key, translation| %>
                    <li><%= translation %></li>
                  <% end %>
                </ul>
            </div>
        </div>
        <div class="col-md-4 col-sm-6 md-margin-bottom-40">
            <div class="service-block service-block-default no-margin-bottom">
                <i class="icon-lg rounded-x icon-line icon-trophy"></i>
                <h2 class="heading-sm"><%= t(".service.block2.title") %></h2>
                <p><%= t(".service.block2.paragraph") %></p>
                <ul class="list-unstyled">
                  <% t(".service.block2.list").each do |key, translation| %>
                    <li><%= translation %></li>
                  <% end %>
                </ul>
            </div>
        </div>
        <div class="col-md-4 col-sm-12">
            <div class="service-block service-block-default no-margin-bottom">
                <i class="icon-lg rounded-x icon-line icon-layers"></i>
                <h2 class="heading-sm"><%= t(".service.block3.title") %></h2>
                <p><%= t(".service.block3.paragraph") %></p>
                <ul class="list-unstyled">
                  <% t(".service.block3.list").each do |key, translation| %>
                    <li><%= translation %></li>
                  <% end %>
                </ul>
            </div>
        </div>
    </div>
    <!-- End Service Blcoks -->
</div>
<!--=== End Service Blcoks ===-->

