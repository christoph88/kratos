<%= form_for [@contest,@submission] do |f| %>
  <% if @submission.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@submission.errors.count, "error") %> prohibited this submission from being saved:</h2>

      <ul>
      <% @submission.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="margin-bottom-20">
    <%= @contest.contest_short_descr %>
  </div>

  <div class="row">
    <% if @contest.contest_type == 1 ||
          @contest.contest_type == 2 ||
          @contest.contest_type == 5
    %>
    <div class="col-sm-6">
      <%= f.label :weight %>
      <%= f.text_field :weight, class: "form-control margin-bottom-20" %>
    </div>
    <% end %>

    <% if @contest.contest_type == 1 ||
          @contest.contest_type == 3 ||
          @contest.contest_type == 4 ||
          @contest.contest_type == 5
    %>
    <div class="col-sm-6">
      <%= f.label :reps %>
      <%= f.number_field :reps, class: "form-control margin-bottom-20" %>
    </div>
    <% end %>

    <% if @contest.contest_type == 6 ||
          @contest.contest_type == 7
    %>
    <div class="col-sm-6">
      <%= f.label :time %>
      <%= f.number_field :time, class: "form-control margin-bottom-20" %>
    </div>
    <% end %>
  </div>

  <%= f.submit t('.submit', default: "Submit"), class: "btn btn-u" %>
<% end %>
