<!--=== Content Part ===-->
<div class="container content">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
      <%= form_for @contest, html: { multipart: true } do |f| %>
      <div class="reg-header">
        <h2><%= @title %></h2>
        <p><%= raw t(".paragraph") %></p>
      </div>


      <label><%= t(".name") %><%= raw redstar(@contest, :name) %></label>
      <%= f.text_field :name, class: "form-control margin-bottom-20" %>

      <label><%= t(".description") %><%= raw redstar(@contest, :description) %></label>
      <%= f.text_area :description, class: "form-control margin-bottom-20" %>

      <label><%= t(".ctype") %><%= raw redstar(@contest, :ctype_id) %></label>
      <%= collection_select(:contest, :ctype_id, Ctype.all, :id, :name) %>

      <div class="media">
        <div class="media-body">
          <label><%= f.label :avatar %><%= raw redstar(@contest, :avatar) %></label>
          <%= f.file_field :avatar, class: "form-control margin-bottom-20" %>
        </div>
        <div class="media-right media-middle">
          <%= image_tag(@contest.avatar.url(:thumb), class: "media-object img-circle", size: "64x64") %>
        </div>
      </div>

      <hr>

      <div class="row">
        <div class="col-lg-6 text-left">
          <%= link_to "Sign Out", destroy_user_session_path, method: :delete %><br>
        </div>
        <div class="col-lg-6 text-right">
          <%= f.submit t('.update', default: "Update"), class: "btn-u" %>
        </div>
      </div>

    <% end %>
    </div>
  </div>
</div><!--/container-->
<!--=== End Content Part ===-->

